  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="blog-left">
          <h1><%= d.title %></h1>
          <div class="posted-on">
            <p>
              by <span>RSGiTECH</span> on
              <span><%= d.createdAt.toLocaleDateString() %></span>
            </p>
          </div>
          <div class="detail-img">
            <img src="<%= d.image.url %>" alt="blog1" />
