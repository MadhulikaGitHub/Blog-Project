<%- include('./header.ejs') %>

<section class="login-wrap mtb-40">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="login-box">
          <h1>Register Here</h1>
          <!-- Signup Form -->
          <form action="/register" method="post">

            <!-- message -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- Name -->
            <div class="form-group">
              <input
                type="text"
                name="name"
                class="form-control"
                placeholder="name"
              />
            </div>

            <!-- Email -->
            <div class="form-group">
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Email ID"
              />
            </div>

            <!-- Password -->
            <div class="form-group">
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Password"
              />
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
              <input
                type="password"
                name="confirmpassword"
                class="form-control"
                placeholder="Confirm Password"
              />
            </div>

            <!-- Button (Register)) -->
            <center>
              <button class="btn btn-primary text-white">Register</button>
            </center>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./footer.ejs') %>
